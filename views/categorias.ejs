<head>
    <link rel="stylesheet" href="/stylesheets/materialize.min.css">
</head>

<nav class="green">
    <div class="nav-wrapper container">
        <a href="/" class="brand-logo">Campeonato de Robótica</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="#">Sistema de control del campeonato</a></li>
        </ul>
    </div>
</nav>

<div class="section white">

    <div class="container">
        <div class="card white">
            <div class="card-content">
                <span class="card-title">Categorías</span>
                <p>Categorías del campeonato de robótica</p>
            </div>
        </div>
        
        <div class="container">
        
            <div class="card white">
                <div class="card-content">
                    
                    <table class="striped">
                        <thead>
                        <tr>
                            <th>Categoría</th>
                            <th>id</th>
                            <th>id (Modalidad)</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% categorias.forEach(function(cat) { %>
                            <tr>
                            <td><%= cat.categoria_cat %></td>
                            <td><a href="/categorias/view/<%= cat.id_cat %>"><%= cat.id_cat %></a></td>
                            <td><a href="/modalidades/view/<%= cat.id_mod_cat %>"><%= cat.id_mod_cat %></a></td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<footer class="page-footer green">
    <div class="container">
      <div class="row">
        <div class="col s12">
            <h5 class="grey-text text-lighten-4">Proyecto de Campeonato de Robótica 2023</h5>
            <p class="white-text">© 2023  Universidad Valle del Momboy - Venezuela</p>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col s12">
          <ul>
            <li><a class="grey-text text-lighten-3" href="#">Modalidades y Reglas</a></li>
            <li><a class="grey-text text-lighten-3" href="#">Patrocinantes</a></li>
            <li><a class="grey-text text-lighten-3" href="#">Contacto</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>